<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef" >

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#efefef" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:background="#efefef" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/tv_evaluate_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="交易成功"
            android:textColor="#fdcf19"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view1"
        android:background="#efefef" >

        <ImageView
            android:id="@+id/iv_wash_store_header"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/wash_store_header" />

       

        <TextView
            android:id="@+id/tv_order_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_wash_store_header"
            android:layout_marginRight="15dp"
            android:text="49.00" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_order_goods_price"
            android:layout_alignBottom="@+id/tv_order_goods_price"
            android:layout_toLeftOf="@+id/tv_order_goods_price"
            android:text="￥" />

        <TextView
            android:id="@+id/tv_order_goods_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_wash_store_header"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_wash_store_header"
            android:maxLines="2"
            android:text="韩版冬款加绒女士五指触屏骑车羊手套"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_order_goods_name"
            android:layout_below="@+id/tv_order_goods_name"
            android:text="尺码:"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_order_goods_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:text="均码"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_order_goods_size"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_order_goods_size"
            android:text="颜色:"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_order_goods_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_goods_name"
            android:layout_toRightOf="@+id/textView3"
            android:text="浅灰色"
            android:textColor="#999999"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:layout_below="@+id/relativeLayout2" >

        <TextView
            android:id="@+id/tv_order_goods_count_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="49.00" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_order_goods_count_price"
            android:layout_alignBottom="@+id/tv_order_goods_count_price"
            android:layout_toLeftOf="@+id/tv_order_goods_count_price"
            android:textSize="14sp"
            android:text="合计:￥" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/textView4"
            android:textSize="14sp"
            android:text="件商品" />

        <TextView
            android:id="@+id/tv_order_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toLeftOf="@+id/textView5"
            android:text="1" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_order_goods_count"
            android:layout_alignBottom="@+id/tv_order_goods_count"
            android:layout_toLeftOf="@+id/tv_order_goods_count"
            android:text="共" />

        <Button
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tv_order_goods_count_price"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_shape_btn"
            android:textSize="16sp"
            android:text="Button" />

        <Button
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView5"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_shape_btn"
            android:textSize="16sp"
            android:text="Button" />

    </RelativeLayout>

</RelativeLayout>